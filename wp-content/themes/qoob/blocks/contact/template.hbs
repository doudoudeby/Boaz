<section class="contacts contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="header-block">{{header}}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5">
                <form class="contact-form">
                    <div class="form-group">
                        <input type="text" name="name" class="input-name" value="" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="email" name="e-mail" class="input-email" value="" placeholder="E-mail">
                    </div>
                    <div class="form-group textarea">
                        <textarea placeholder="Message" class="message"></textarea>
                    </div>
                    <div class="contact-button">
                        <button type="submit" class="btn btn-default">{{text-btn}}</button>
                    </div>
                </form>   
                <div class="form-thank-you">
                    <h2 class="text-center">Thank you!</h2>
                    <h3 class="text-center">We will contact you soon</h3>
                </div>
            </div>
            <div class="col-lg-7 block-map-contacts">
                <div class="block-contacts">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="e-mail"><strong>E-mail:</strong> {{e-mail}}</div>
                            <div class="phone"><strong>Phone:</strong> {{phone}}</div>
                        </div>
                        <div class="col-lg-5 address">
                            {{{address}}}
                        </div>
                    </div>
                </div>
                <div class="map-container">
                    <iframe class="map" src="http://maps.google.com/maps?q={{ lat }},{{ lng }}&z={{ size }}&msa=0&ie=UTF8&t=m&amp;iwloc=near&amp;output=embed" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</section>