<section class="faq-list">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="header-block">{{header}}</h1>
			</div>
			<div class="col-lg-12">
                {{#if faq.length}}
					{{#each_with_sort faq "order"}}
						<div class="row">
							<div class="col-lg-12">
								<div class="count">{{order}}</div>
								<div class="row item">
									<div class="col-lg-6">
										<h4>{{ title }}</h4>
									</div>
									<div class="col-lg-6 border-left-line">
										<div class="content">{{{ content }}}</div>
									</div>
								</div>
							</div>
						</div>
					  {{/each_with_sort}}
                {{/if}}
			</div>
		</div>
	</div>
</section>

<script type="text/javascript">
jQuery(document).ready(function() {
    jQuery('#accordion-{{id}} .accordion-toggle').click(function(event) {
    	event.preventDefault();
    });
});
</script>

