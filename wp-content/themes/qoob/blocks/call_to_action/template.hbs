<section class="call-to-action">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				{{#if header}}
				<h2 class="header-block">{{header}}</h2>
				{{/if}}
			</div>
		</div>
		<div class="row">
		{{#if image}}
			<div class="col-lg-7 col-sm-7">
				<img src="{{image}}" alt="">
			</div>
		{{/if}}
			<div class="col-lg-5 col-sm-5 text">
				{{{text}}}
				<a href="{{action_url}}" class="btn btn-action">{{action_text}}</a>
			</div>
		</div>
	</div>
</section>