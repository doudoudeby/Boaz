<section class="header-block-wrap header-big-bg-{{id}} header-big-bg action-overlay" >
	<div id="background-block-{{id}}" class="background-block {{#ifCond parallax '==' '1'}}parallax{{/ifCond}}" {{#if image}} style="background-image : url({{image}});" {{/if}}></div>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="header-block">{{header}}</h2>
			</div>
			<div class="col-lg-12 text-center btn-header-wrap">
				{{#each_with_sort buttons "order"}}
					<a href="{{action_url}}" class="btn white inverse">{{title}}</a>
				{{/each_with_sort}}
			</div>
		</div>
	</div>
</section>
<script>
	jQuery(document).ready(function() {
			jQuery(window).scroll(function () {
		        var scrolled = jQuery(document).scrollTop() - jQuery('.header-big-bg-{{id}}').offset().top;
		        jQuery('#background-block-{{id}}.parallax').css('top', scrolled + 'px');
		    });
	});
</script>